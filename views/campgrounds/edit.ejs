<% layout("layouts/boilerplate") %>

<h2 class="text-center"><%= campground.title %> editing:</h2>
<div class="row">
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds/<%=campground._id%>?_method=PUT"
      method="POST"
      class="validated-form"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Campground title</label>
        <input
          type="text"
          class="form-control"
          name="campground[title]"
          id="title"
          value="<%= campground.title%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Campground location</label>
        <input
          type="text"
          class="form-control"
          name="campground[location]"
          id="location"
          value="<%= campground.location%>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          class="form-control"
          id="description"
          name="campground[description]"
          required
        >
<%=campground.description %></textarea
        >
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Price/night</label>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
            type="text"
            class="form-control"
            id="price"
            name="campground[price]"
            value="<%=campground.price%>"
            aria-label="Amount (to the nearest dollar)"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="image">Add more images</label>
        <div class="form-file custom-file">
          <input
            id="image"
            type="file"
            class="form-file-input"
            name="image"
            multiple
          />
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label"></span>
            <span class="form-file-button"></span>
          </label>
        </div>
      </div>
      <div class="mb-3">
        <% campground.images.map((image, idx) => { %>
        <div class="form-check-inline">
          <img
            src="<%= image.thumbnail %>"
            class="img-fluid img-thumbnail"
            alt="<%=image.filename%>"
            name="image"
          />
          <input
            class="form-check-input"
            type="checkbox"
            name="deleteImages[]"
            value="<%= image.filename %>"
            id="image-<%=idx%>"
          />
          <label class="form-check-label" for="image-<%=idx%>"> Delete? </label>
        </div>

        <% }) %>
      </div>
      <button type="submit" class="btn btn-info">Update Campground</button>
    </form>
    <footer class="mt-5">
      <a href="/campgrounds/<%=campground._id%>" class="btn btn-light"
        >Cancel</a
      >
      <a href="/campgrounds" class="btn btn-warning">All Campgrounds</a>
    </footer>
  </div>
</div>
