<% layout("layouts/boilerplate") %>

<div class="row">
  <h2 class="text-center">New Campground</h2>
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds"
      method="POST"
      class="validated-form"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input
          type="text"
          class="form-control"
          name="campground[title]"
          id="title"
          autofocus
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location:</label>
        <input
          type="text"
          class="form-control"
          name="campground[location]"
          id="location"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          class="form-control"
          id="description"
          name="campground[description]"
          required
        ></textarea>
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price/night</label>
        <div class="input-group mb-3">
          <span class="input-group-text">$</span>
          <input
            type="number"
            class="form-control"
            id="price"
            name="campground[price]"
            aria-label="Amount (to the nearest dollar)"
            placeholder="0.00"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="image">Add more images</label>
        <div class="form-file custom-file">
          <input
            id="image"
            type="file"
            class="form-file-input"
            name="image"
            multiple
          />
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label"></span>
            <span class="form-file-button"></span>
          </label>
        </div>
      </div>
      <button type="submit" class="btn btn-success btn-block">Add</button>
    </form>
    <footer>
      <a href="/campgrounds" class="btn btn-light">All Campgrounds</a>
    </footer>
  </div>
</div>
